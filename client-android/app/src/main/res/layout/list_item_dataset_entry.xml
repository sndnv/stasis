<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="52dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/dataset_entry_summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:textAppearance="?attr/textAppearanceSubtitle1" />

    <TextView
        android:id="@+id/dataset_entry_summary_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataset_entry_summary_title"
        android:layout_gravity="center_vertical"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textAppearance="?attr/textAppearanceBody2" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/dataset_entry_summary_loading_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataset_entry_summary_info"
        android:indeterminate="true"
        android:paddingHorizontal="16dp" />

</RelativeLayout>
