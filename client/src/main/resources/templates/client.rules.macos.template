# exclude git files, logs, temporary and cache files
- /Users/$${USER}                       **/*.{class,obj}
- /Users/$${USER}                       **/lost+found/**
- /Users/$${USER}                       **/*cache*/**
- /Users/$${USER}                       **/*log*/**
- /Users/$${USER}                       **/*.{tmp,temp,part,bak,~}
- /Users/$${USER}                       **/.git
- /Users/$${USER}                       Library/Caches
- /Users/$${USER}                       Library/Logs
- /Users/$${USER}                       **/{.localized,*.localized}

# generated stasis-client files
- /Users/$${USER}/Library/Preferences   stasis-client/certs
- /Users/$${USER}/Library/Preferences   stasis-client/*.{p12,pem}
- /Users/$${USER}/Library/Preferences   stasis-client/{device-secret,api-token}
